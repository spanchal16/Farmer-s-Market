<!-- Update a product -->

<div class="m-3" style="overflow: auto;">
    <div class="col-sm-6 col-md-6 col-lg-8 mx-auto">
      <center><h3>Update Product</h3></center>
  
      <div class="card border-dark">
        <div class="card-body">
          <form class="needs-validation" method="POST" action="/updateProduct">
            <label>Product ID</label>
            <input
              type="number"
              class="form-control"
              name="productID"
              min="0"
              step="1"
              value="<%= product.productID %>"
              readonly
            />
  
            <br />
  
            <label>Product Name</label>
            <input
              type="text"
              class="form-control"
              name="productName"
              required
              value="<%=product.product %>"
            />
  
            <br />
  
            <label>Stock</label>
            <input
              type="number"
              class="form-control"
              name="stock"
              min="0"
              step="1"
              required
              value="<%=product.stock %>"
            />
  
            <br />

            <label>Price</label>
            <input
              type="number"
              class="form-control"
              name="price"
              min="0"
              step="0.01"
              required
              value="<%=product.price %>"
            />
  
            <br />
  
            <button class="btn btn-primary" type="submit">Update</button>
          </form>
        </div>
      </div>
    </div>
  </div> 