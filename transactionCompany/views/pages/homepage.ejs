<div
class="bg-info fixed-top"
style="text-align: center; padding: 2vh;"
>
<h2>Farmer's Market: Transaction Portal</h2>
<a href="/" class="btn-sm btn-dark">Home</a>
</div>
<div class="mb-3" style="margin-top: 27vh; overflow: auto;margin-bottom: 20%;">
  <div class="card border-dark" style="height: 50%; width: 35%;align-self: center; align-content: center;margin-left: 30%;" >
    <h2>Login</h2>
    <div class="card-body" >
      <form class="needs-validation" method="POST" action="/twoFactor">
        <label for="lblpartid">Email ID </label>
        <input
          class="form-control"
          name="txtemailid"
          type="email"
          placeholder="Enter your email id"
          required
        />
        <br />
        <label for="lblpartid">Password </label>
        <input
          class="form-control"
          name="txtpassword"
          type = "password"
          placeholder="Enter your pasword"
          maxlength="64"
          required
        />
        <br />

        <button class="btn btn-primary" type="submit">Login</button>
      </form>
      <br />
      <a href="/registerUser">New user? Register Here</a>
    </div>
  </div>
  
  <% if (typeof error != 'undefined'){ if (error != null || error != "") { %>
  
    <div class="card border-danger bg-danger" style="width: 35%; margin-left: 30%; margin-top: 1%; height: 1%;">
      <div class="card-body mx-auto"> 
        <p class="card-text text-white">
          <%= error %>
        </p>
      </div>
    </div>

    <% } %>

    <%  }%>  

</div>
